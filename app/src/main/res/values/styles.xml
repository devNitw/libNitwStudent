<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="custom_view" >
    <item name="android:paddingHorizontal">20dp</item>
    <item name="android:paddingVertical">8dp</item>
    <item name="android:background">@drawable/authentication_custom_views</item>
    </style>

    <style name="AppTheme.PopupCard">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name ="android:windowCloseOnTouchOutside">true</item>

    </style>
</resources>